@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AssessmentLogin_Layout.cshtml";
}
<div class="pt-4 pb-2">
    <h5 class="card-title text-center pb-0 fs-4">Login to Applicant's Account</h5>
    <p class="text-center small">Enter your username & password to login</p>
</div>

<form class="row g-3" asp-action="ApplicantLogin">
    <div class="container">
        <div class="text-success">
            @if (ViewData["Message"] != null && ViewData["Message"].ToString() != "")
            {
                @ViewData["Message"];
            }
        </div>
    </div>
    <div class="col-12">
        <label for="yourUsername" class="form-label">Username</label>
        <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend"></span>
            <input type="text" name="username" class="form-control" id="username" required>
            <div class="invalid-feedback">Please enter your username.</div>
        </div>
    </div>

    <div class="col-12">
        <label for="yourPassword" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password" required>
        <div class="invalid-feedback">Please enter your password!</div>
    </div>
    <div class="col-12">
        <input type="submit" value="Login" class="btn btn-primary w-100" />
    </div>
</form>