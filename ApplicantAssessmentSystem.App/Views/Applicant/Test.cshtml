            function GetQuestionBySubjectsAndNumber(subject, number) {
                $.ajax({
                    url: '../api/question/GetQuestionBySubjectAndNumber',
                    cache: false,
                    type: 'GET',
                    contentType: 'application/json',
                    async: false,
                    data: {
                        subject: subject,
                        number: number
                    },
                    success: function (response) {
                        debugger;
                        $('#number').val(response.questionNumber);
                        $('#question').val(response.questionText);
                        $('#option1').val(response.option1);
                        $('#option2').val(response.option2);
                        $('#option3').val(response.option3);

                        $('#option1Label').text(response.option1);
                        $('#option2Label').text(response.option2);
                        $('#option3Label').text(response.option3);


                        return response;
                    },
                    error: function (error) {
                        //alert("Error occured");//To avoid alerting if no internet connection.
                        console.log(error);
                    }
                });
            }

